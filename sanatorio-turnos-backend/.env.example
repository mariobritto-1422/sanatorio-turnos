# Database
DATABASE_URL="postgresql://usuario:password@localhost:5432/sanatorio_turnos?schema=public"

# Server
PORT=4000
NODE_ENV=development

# JWT
JWT_SECRET=tu-super-secreto-cambiar-en-produccion-minimo-32-caracteres
JWT_EXPIRES_IN=7d

# CORS
FRONTEND_URL=http://localhost:3000

# ============================================
# EMAIL (SMTP) - Sistema de Notificaciones
# ============================================
# Configuración de SMTP para envío de emails
# Ejemplo con Gmail (habilitar "Contraseñas de aplicación"):
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="tu-email@gmail.com"
SMTP_PASS="tu-app-password"
EMAIL_FROM="tu-email@gmail.com"
EMAIL_FROM_NAME="Sanatorio Turnos"

# ============================================
# TWILIO (WhatsApp / SMS)
# ============================================
# Configuración de Twilio para WhatsApp y SMS
# Regístrate en: https://www.twilio.com/
TWILIO_ACCOUNT_SID="tu-account-sid"
TWILIO_AUTH_TOKEN="tu-auth-token"
TWILIO_WHATSAPP_NUMBER="+14155238886"  # Número sandbox de Twilio
TWILIO_SMS_NUMBER="+1234567890"        # Opcional

# Nota: Para producción, necesitas un número aprobado por WhatsApp
